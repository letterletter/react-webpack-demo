{
  "compilerOptions": {
    "declaration": true,
    "target": "es5",
    "jsx": "react",
    "module": "es2015",
    "lib": ["dom", "es5", "es6", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": false,
    "checkJs": false,
    "baseUrl": "./",
    "paths": {
      "@": ["src"],
      "@/*": ["src/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*", "./node_modules/@mybricks/**/*" ],
  "exclude": ["dist"]
}
